    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Seller</th>
                    <th scope="col">Proegory</th>
                    <th scope="col">Upload date</th>
                    <th scope="col">End date</th>
                    <th class="text-right"></th>
                </tr>
            </thead>
            <tbody>
                {{#each this.pros}}
                <tr class="row-{{ProID}}">
                    <th scope="row">{{ProID}}</th>
                    <td id="ProName">
                        {{ProName}}
                    </td>
                    <td class="text-right">
                        <a onclick="Delete({{ProID}})" class="delete btn btn-danger btn-sm shadow" href="#"
                            role="button"><i class="fa fa-trash" aria-hidden="true"></i>
                            delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="card-footer d-flex justify-content-center">
