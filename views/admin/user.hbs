
<div class="card border-primary">
    <div class="card-header p-4" style="background-color: #2fbdd3;">
        <i class="fa fa-user" aria-hidden="true"></i> User management
        <span class="float-right">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown"><i
                        class="fa fa-filter" aria-hidden="true"></i> Filter
                </button>
                <ul class="dropdown-menu text-center">
                    <li>
                        <a href="http://localhost:3000/admin/user/?filter=All"> <i class="fa fa-user" aria-hidden="true"></i> All</a>
                    </li>
                    <li>
                        <a href="http://localhost:3000/admin/user/?filter=Bidder"><i class="fa fa-gavel" aria-hidden="true"></i> Bidder</a>
                    </li>
                    <li><a href="http://localhost:3000/admin/user/?filter=Seller"><i class="fa fa-user-secret" aria-hidden="true"></i> Seller</a></li>
                </ul>
            </div>
        </span>
    </div>
    <div class="card-body">
        <div class="modal fade" id="editUser" role="dialog" aria-hidden="true">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit User</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form id="formEdit" method="put">
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">User ID</span>
                                </div>
                                <input id="EditUserID" class="form-control" type="text" name="UserID" class="form-control"
                                    aria-describedby="helpId" readonly>
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Username</span>
                                </div>    
                                <input id="EditUsername" class="form-control" type="text" name="Username" class="form-control"
                                    aria-describedby="helpId">
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Email</span>
                                </div>    
                                <input id="EditEmail" class="form-control" type="text" name="Email" class="form-control"
                                    aria-describedby="helpId">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button onclick="SaveUser()" class="btn btn-success btn-sm" data-dismiss="modal"><i
                                class="fa fa-floppy-o" aria-hidden="true" ></i> Save</button>
                    </div>
                </div>

            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th class="text-right"></th>
                </tr>
            </thead>
            <tbody>
                {{#each this.users}}
                <tr class="row-{{ID}}">
                    <th class="UserID" scope="row">{{ID}}</th>
                    <td class="Username">{{Username}}</td>
                    <td class="Email">{{Email}}</td>
                    {{#if Role}}
                    <td>Seller</td>
                    <td class="text-right">
                        <button onclick="toBidder(this, {{ID}})" class="btn btn-secondary btn-sm shadow"><i class="fa fa-arrow-down" aria-hidden="true"></i>
                            To Bidder</button>
                    {{else}}
                    <td>Bidder</td>
                    <td class="text-right">
                        <button onclick="toSeller(this, {{ID}})" class="btn btn-info btn-sm shadow"><i class="fa fa-arrow-up" aria-hidden="true"></i>
                            To Seller</button>
                    {{/if}}
                        <button onclick="EditUser(this)" class="btn btn-warning btn-sm shadow"><i class="fa fa-pencil"
                                aria-hidden="true"></i>
                            Edit</button>
                        {{#if isBanned}}
                        <button onclick="Unban(this, {{ID}})" class="btn btn-success btn-sm shadow"><i class="fa fa-check" aria-hidden="true"></i>
                            Unban</button>
                        {{else}}
                        <button onclick="Delete(this, {{ID}})" class="btn btn-danger btn-sm shadow"><i class="fa fa-trash"
                                aria-hidden="true"></i>
                            Delete</button>
                        {{/if}}
                    </td>
                </tr>
