<div class="panel panel-primary shadow">
    <div class="panel-heading p-4">
        <i class="fa fa-user" aria-hidden="true"></i> User management
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.users}}
                <tr>
                    <th scope="row">{{UserID}}</th>
                    <td>{{UserName}}</td>
                    <td>{{UserEmail}}</td>
                    <td class="text-right">
                        <a class="btn btn-danger btn-sm shadow" href="#" role="button"><i class="fa fa-trash"
                                aria-hidden="true"></i>
                            delete</a>
                        <a class="btn btn-warning btn-sm shadow" href="#" role="button"><i class="fa fa-pencil"
                                aria-hidden="true"></i>
                            Edit</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="panel-footer text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination text-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>