<div class="card border-primary">
    <div class="card-header p-4" style="background-color: #2fbdd3;">
        <i class="fa fa-user" aria-hidden="true"></i> User management
        <span class="float-right">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown"><i
                        class="fa fa-filter" aria-hidden="true"></i> Filter
                </button>
                <ul class="dropdown-menu text-center">
                    <li><a href="#"><i class="fa fa-gavel" aria-hidden="true"></i> Bidder</a></li>
                    <li><a href="#"><i class="fa fa-user-secret" aria-hidden="true"></i> Seller</a></li>
                </ul>
            </div>
        </span>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th class="text-right"></th>
                </tr>
            </thead>
            <tbody>
                {{#each this.users}}
                <tr class="row-{{ID}}">
                    <th scope="row">{{ID}}</th>
                    <td class="Username">{{Username}}</td>
                    <td class="Email">{{Email}}</td>
                    {{#if Role}}
                    <td>Seller</td>
                    <td class="text-right">
                        <button onclick="toBidder(this, {{ID}})" class="btn btn-secondary btn-sm shadow"><i class="fa fa-arrow-down" aria-hidden="true"></i>
                            To Bidder</button>
                    {{else}}
                    <td>Bidder</td>
                    <td class="text-right">
                        <button onclick="toSeller(this, {{ID}})" class="btn btn-info btn-sm shadow"><i class="fa fa-arrow-up" aria-hidden="true"></i>
                            To Seller</button>
                    {{/if}}
                        <button onclick="Edit({{ID}})" class="btn btn-warning btn-sm shadow"><i class="fa fa-pencil"
                                aria-hidden="true"></i>
                            Edit</button>
                        <button onclick="Delete(this, {{ID}})" class="btn btn-danger btn-sm shadow"><i class="fa fa-trash"
                                aria-hidden="true"></i>
                            delete</button>
                    </td>
                </tr>
                <tr class="row-{{ID}}" style="display: none;">
                    <form class="form-inline">
                        <th scope="row">
                            <div class="form-group">
                                <input type="text" name="ID" id="ID" class="form-control" placeholder="{{ID}}"
                                    value="{{ID}}" aria-describedby="helpId" disabled>
                            </div>
                        </th>
                        <td class="Username">
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{Username}}" name="Username"
                                    placeholder="{{Username}}" aria-describedby="helpId">
                            </div>
                        </td>
                        <td class="Email">
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{Email}}" name="Email"
                                    placeholder="{{Email}}" aria-describedby="helpId">
                            </div>
                        </td>
                        <th class="Role">
                            <div class="form-group">
                                <input type="text" name="Role" id="Role" class="form-control" placeholder="{{Role}}"
                                    value="Seller" aria-describedby="helpId" disabled>
                            </div>
                        </th>
                        <td class="text-right">
                            <button onclick="SaveUser({{ID}})" class="save btn btn-success btn-sm shadow"
                                role="button"><i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Save</button>
                            <a onclick="Cancel({{ID}})" class="cancel btn btn-danger btn-sm shadow" href="#"
                                role="button"><i class="fa fa-times" aria-hidden="true"></i>
                                Cancel</a>
                        </td>
                    </form>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>