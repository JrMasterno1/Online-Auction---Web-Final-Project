<div class="container mt-5">
    <section class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="pro-img-details">
                        <img src="/public/imgs/sp/{{this.product.ProID}}/main_thumbs.jpg" alt="test"
