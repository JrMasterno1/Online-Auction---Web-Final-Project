<script src="https://www.google.com/recaptcha/api.js"></script>
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

<form class="show1" method="post">
  <input type="hidden" name="action" value="Login">
  {{#if err_message}}
  <div class="alert alert-warning" role="alert">
    {{err_message}}
    {{#if re_verify}}
    <a href="#" id="verifyEmail"> Click here</a> to verify
    {{/if}}
  </div>

  {{/if}}
  {{#if success}}
  <div class="alert alert-success" role="alert">
    {{success}}
  </div>
  {{/if}}
  {{!-- Username --}}
  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
    </div>
    <input type="text" class="form-control" placeholder="Username" name="username">
  </div>

  {{!-- Password --}}
  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-key" aria-hidden="true"></i></span>
    </div>
    <input type="password" class="form-control" placeholder="Password" name="password">
  </div>

  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input">
    <span class="form-check-label" for="remember">Remember me</span>
    <span class="ml-4">
      <a href="#" id="get-new-password">Forgot your password?</a>
    </span>
  </div>

  <center>
    <button type="submit" class="btn btn-primary">Login</button>
  </center>


  <div class="other text-center">
    <div class="hl">
      or
    </div>
    <div class="mt-3">
      <a href="#" class="fb btn">
        <i class="fa fa-facebook-square" aria-hidden="true"></i> Login with Facebook
      </a>
    </div>
    <div>
      <a href="#" class="google btn">
        <i class="fa fa-google-plus" aria-hidden="true"></i> Login with Google+
      </a>
    </div>
    <div class="d-flex justify-content-center">
      Don't have an account? <a href="#" class="ml-2" id="register">Sign Up</a>
    </div>
  </div>
</form>

{{!-- Verify Email --}}
<form class="show4" action="/auth/sendverify" method="post" style="display: none;">
  <input type="hidden" name="action" value="Reverify">
  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></span>
    </div>
    <input type="email" class="form-control" placeholder="Email" name="Email">
  </div>
  <center>
    <button type="submit" class="btn btn-primary">Verify Email</button>
  </center>
  <div class="d-flex justify-content-center mt-4" id="goback4">
    <a href="#" class="ml-2">Go back</a>
  </div>
</form>

<form class="show2" style="display: none;">

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></span>
    </div>
    <input type="email" class="form-control" placeholder="Email">
  </div>
  <center>
