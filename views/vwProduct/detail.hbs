{{#section 'js'}}
    <script crossorigin="anonymous" src="/public/js/time.js"></script>
    <script type="text/javascript">
                f('time-left-{{this.product.ProID}}', "{{this.product.EndDate}}");
    </script>
{{/section}}
{{#section 'css'}}
    <link rel="stylesheet" href="/public/css/style.css">
{{/section}}

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="pro-img-details">
                        <img src="../public/imgs/sp/{{this.product.ProID}}/main_thumbs.jpg" alt="test"
                            style="width: 100%;">
                    </div>
                    <div class="pro-img-list">
                        <a href="#">
                            <img src="/public/imgs/sp/{{this.product.ProID}}/1.jpg" alt="">
                        </a>
                        <a href="#">
                            <img src="/public/imgs/sp/{{this.product.ProID}}/1_thumbs.jpg" alt="">
                        </a>
                        <a href="#">
                            <img src="/public/imgs/sp/{{this.product.ProID}}/main.jpg" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4 class="pro-d-title" style="display: inline;">
                        {{this.product.ProName}}
                    </h4>
                    <a class="btn btn-outline-success btn-sm float-right" href="#" role="button"><i class="fa fa-heart"
                            aria-hidden="true"></i> Add to watchlist</a>

                    <div>
                        <small class="text-muted">
                            Start date: {{this.product.UploadDate}}
                        </small>
                    </div>


                    <h6 class="mt-3">
                        <i class="fa fa-clock-o mr-2" aria-hidden="true"></i>Time remain
                        <h5 class="time-left-{{this.product.ProID}}" style="color: red; font-size:30px"></h5>
                    </h6>
                   


                    <p class="mt-3">
                        {{this.product.FullDesc}}
                    </p>
                    <div class="product_meta">
                        <span class="posted_in"> <strong>Categories:</strong> <a rel="tag"
                                href="/byCat/{{this.product.CatID}}">{{category.CatName}}</a>.</span>

                    </div>
                    <div class="control-switch btn-group mt-4" data-toggle="buttons" role="group">
                        <label class="btn btn-secondary active">
                            <input type="radio" name="options" id="option1" autocomplete="off" checked> Bid
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="option2" autocomplete="off"> Buy now
                        </label>
                    </div>
                    <div class="bid mt-3 mb-3">
                        <form>
                            <div class="form-group">
                                <div class="price mb-4">
                                    <h6 style="display: inline;">Highest bid: </h6>
                                    <h5 style="display: inline; color:red">$6000 </h5>
                                </div>
                                <input type="text" name="" id="" class="form-control" placeholder=""
                                    aria-describedby="helpId">
                                <small id="helpId" class="text-muted">US Dollar</small>
                            </div>
                            <button class="btn btn-round btn-danger" type="button"><i class="fa fa-money"
                                    aria-hidden="true"></i> Bid</button>
                        </form>
                    </div>
                    <div class="buy mt-3" style="display: none;">
                        <div class="price mt-3">
                            <h6 style="display: inline;">Price: </h6>
                            <h5 style="display: inline; color:red">$6000 </h5>
                        </div>
                        <form>
                            <button class="btn btn-round btn-success" type="button"><i class="fa fa-cart-plus"
                                    aria-hidden="true"></i> Buy now</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="nav-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active show" id="description-tab" data-toggle="tab" href="#description"
                        role="tab" aria-controls="description" aria-selected="true">Mô tả sản phẩm</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="info-tab" data-toggle="tab" href="#info" role="tab" aria-controls="info"
                        aria-selected="false">Thông tin người bán</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab"
                        aria-controls="reviews" aria-selected="false">Danh sách bidder</a>
                </li>
            </ul>
            <div class="tab-content ml-3" id="nav-tabContent">
                <div class="tab-pane fade show active" id="description" role="tabpanel"
                    aria-labelledby="description-tab">
                    <h5 class="mt-3">{{this.product.ProName}}</h5>
                    <p class="pt-1">{{this.product.TinyDesc}}</p>
                </div>
                <div class="tab-pane fade" id="info" role="tabpanel" aria-labelledby="info-tab">
                    <div class="row mt-3">
                        <div class="col-sm-4">
                            <h5 class="text-center">{{this.seller.FullName}}</h5>
                        </div>
                        <div class="col-sm-1">
                            <div class="vl"></div>
                        </div>
                        <div class="col-sm-7">
                            <h6>Số sao đánh giá</h6>
                            <h6>Số lượng sản phẩm đã bán</h6>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                    <div class="bidder mt-3">
                        <h5 style="color: rgb(187, 82, 82)">Danh sách bidder</h5>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Thời điểm</th>
                                    <th scope="col">Người mua</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col">Điểm đánh giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td scope="row">1/11/2019 10:43</td>
                                    <td>{{this.product.Bidder}}</td>
                                    <td>6,000,000</td>
                                    <td>5</td>
                                </tr>
                                <tr>
                                    <td scope="row">1/11/2019 10:43</td>
                                    <td> ****Khoa</td>
                                    <td>6,000,000</td>
                                    <td>5</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-5">
                    <div class="card card-small">
                        <div class="thumbnail">
                            <div class="zoom">
                                <img class="card-img-top" src="/public/imgs/sp/{{this.product.ProID}}/main_thumbs.jpg"
                                    alt="{{ProName}}" title="{{this.product.ProName}}">
                            </div>
                            {{#if New}}
                            <span class="tag-picture bg-info text-white">New</span>
                            {{/if}}
                            <div class="details">
                                <div class="user">
                                    <div class="user-photo">
                                        <img alt="Thumb" src="/public/imgs/avatar/0/avatar1.png">
                                    </div>
                                    <div class="name" data-toggle="tooltip" data-placement="top"
                                        title="{{this.product.Bidder}}">
                                        {{this.product.Bidder}}
                                    </div>
                                </div>
                                <div class="numbers">
                                    <b class="views mr-1"><i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
                                        {{this.product.BidNumber}}</b>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="card-body mb-0">

                            <h4 class="card-title">
                                <a class="text-dark" href="/product/{{this.product.ProID}}">{{this.product.ProName}}</a>
                            </h4>

                            <h6 class="card-title text-success">
                                <i class="fa fa-money mr-2" aria-hidden="true"></i></i>Highest bid
                                <h5 class="text-success">{{{format_number this.product.Price}}}</h5>
                            </h6>


                            {{#if PriceBuyNow}}
                            <h6 class="card-title text-info">
                                <i class="fa fa-shopping-bag mr-2" aria-hidden="true"></i>Buy now
                                <h5 class="text-info">{{{format_number this.product.PriceBuyNow}}}</h5>
                            </h6>
                            {{/if}}

                            <p class="card-text">
                            <h6 class="card-title">
                                <i class="fa fa-clock-o mr-2" aria-hidden="true"></i>Time remain
                                <h5 class="time-left-{{this.product.ProID}}"></h5>
                            </h6>
                            

                            </p>


                        </div>
                        <div class="card-text mr-auto ml-3 mb-0">
                            <button type="button" class="btn btn-sm btn-outline-primary my-2">
                                <i class="fa fa-list mr-1" aria-hidden="true"></i>View Detail
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger my-2">
                                <i class="fa fa-heart mr-1" aria-hidden="true"></i>Add to Watchlist
                            </button>
                        </div>
                        <div class="card-footer text-right mt-4">
                            <small class="text-muted">Upload date: {{this.product.UploadDate}}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>